
<div class="modal-header">
    <h3 class="modal-title">Advanced search</h3>
</div>
<div class="modal-body">
  <table class="advanced-search-table">
        <tr ng-repeat="row in categories">
          <td ng-repeat="category in row">
            <span ng-show="category.parent == ''" style="font-weight: bold;">{{category._id}}</span>
            <span ng-show="category.parent != ''">
              <button class="btn btn-primary" type="button" ng-click="addToSearchBy(category)">âœ”</button>
              <!--<button class="btn btn-warning" type="button" ng-click="delete(category)">Delete</button>-->
            </span>
            <span ng-show="category.parent != ''">{{category._id}} ({{category.assetCount}})</span>

            <!-- this is likely not showing up because success is not in the categories scope-->
            <div ng-show="success">
              <i class="fa fa-check"></i>
              deleted!
            </div>
          </td>
        </tr>
      </table>

</div>
<div class="modal-footer">
    <div ng-repeat="category in chosenCategories">
        {{category._id}} <button class="btn btn-warning" type="button" ng-click="removeSearchBy(category)">x</button>
    </div>

    <button class="btn btn-primary" type="button" ng-click="clearSearch()">Clear search</button>
    <button class="btn btn-primary" type="button" ng-click="ok()">OK: {{resultAssets.length}} results</button>
    <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
</div>